{{setPageTitle "Magma Haven | Search Page"}}
<section class="volcano-search">
            <h1>Search</h1>

            <form class="search-form" method="">
                <input type="text" class="search-volcano" name="name" value="{{filter.name}}" placeholder="Search by Name...">
                <select id="type" name="typeVolcano">
                    {{#each volcanoTypes}}
                        <option value="{{value}}" {{selected}}>{{label}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn-search">Search</button>
            </form>

                <div class="search-result">
                {{#if volcanoes}}
                    <div class="search-list">
                    {{#each volcanoes}}
                    {{>volcanoes}}
                    {{/each}}
                    </div>
                {{else}}
                    <div class="no-match">
                    <p>No match was found!</p>
                    </div>
                {{/if}}
                </div>          
            
</section>