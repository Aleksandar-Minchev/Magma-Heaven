{{setPageTitle "Magma Haven | Create Page"}}
<section id="create-container">
            <div class="create-container-info">
                <h1>Create Volcano Wiki</h1>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{volcanoes.name}}" placeholder="...">
                    <label>Location:</label>
                    <input type="text" id="location" name="location" value="{{volcanoes.location}}" placeholder="...">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" value="{{volcanoes.elevation}}" placeholder="...">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" value="{{volcanoes.lastEruption}}" placeholder="...">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{volcanoes.image}}" placeholder="http://...">
                    <label>Volcano Type:</label>
                    <select id="type" name="typeVolcano">
                        {{#each volcanoTypes}}
                            <option value="{{value}}" {{selected}}>{{label}}</option>
                        {{/each}}
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="description" value="{{volcanoes.description}}" placeholder="..."></textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>